<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
>
    <Dialog
        id="createGroupDialog"
        title="{i18n>createNewGroupTitle}"
        contentWidth="500px"
    >
        <form:SimpleForm
            id="createGroupForm"
            layout="ResponsiveGridLayout"
            labelSpanL="3"
            labelSpanM="3"
            columnsL="1"
            columnsM="1"
        >
            <form:content>
                <Label
                    text="{i18n>groupNameCol}"
                    required="true"
                />
                <Input
                    id="createGroupName"
                    value="{createGroupModel>/name}"
                    required="true"
                    placeholder="{i18n>enterGroupNamePlaceholder}"
                />
                <Label
                    text="{i18n>groupDisplayName}"
                    required="true"
                />
                <Input
                    id="createGroupDisplayName"
                    value="{createGroupModel>/displayName}"
                    required="true"
                    placeholder="{i18n>enterDisplayNamePlaceholder}"
                />
                <Label text="{i18n>groupDescriptionCol}" />
                <TextArea
                    id="createGroupDescription"
                    value="{createGroupModel>/description}"
                    rows="4"
                    placeholder="{i18n>enterGroupDescriptionPlaceholder}"
                />
            </form:content>
        </form:SimpleForm>
        <beginButton>
            <Button
                id="createGroupSaveBtn"
                text="{i18n>createButton}"
                type="Emphasized"
                press=".onCreateGroupSave"
            />
        </beginButton>
        <endButton>
            <Button
                id="createGroupCancelBtn"
                text="{i18n>cancel}"
                type="Transparent"
                press=".onCreateGroupCancel"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
