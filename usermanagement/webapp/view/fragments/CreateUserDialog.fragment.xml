<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
>
    <Dialog
        id="createUserDialog"
        tooltip="{i18n>createNewUserTooltip}"
        contentWidth="600px"
    >
        <form:SimpleForm
            id="createUserForm"
            maxContainerCols="2"
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanL="4"
            labelSpanM="4"
            columnsL="2"
            columnsM="1"
        >
            <form:content>
                <Label
                    text="{i18n>firstNameCol}"
                    required="true"
                />
                <Input
                    id="createFirstNameInput"
                    value="{createUserModel>/firstName}"
                    placeholder="{i18n>enterFirstNamePlaceholder}"
                    required="true"
                />
                <Label
                    text="{i18n>lastNameCol}"
                    required="true"
                />
                <Input
                    id="createLastNameInput"
                    value="{createUserModel>/lastName}"
                    placeholder="{i18n>enterLastNamePlaceholder}"
                    required="true"
                />
                <Label
                    text="{i18n>loginNameCol}"
                    required="true"
                />
                <Input
                    id="createLoginNameInput"
                    value="{createUserModel>/loginName}"
                    placeholder="{i18n>enterLoginNamePlaceholder}"
                    required="true"
                />
                <Label
                    text="{i18n>emailCol}"
                    required="true"
                />
                <Input
                    id="createEmailInput"
                    value="{createUserModel>/email}"
                    type="Email"
                    placeholder="{i18n>enterEmailPlaceholder}"
                    required="true"
                />
                <Label
                    text="{i18n>userTypeLabel}"
                    required="true"
                />
                <ComboBox
                    id="createUserTypeCombo"
                    selectedKey="{createUserModel>/userType}"
                    items="{options>/userTypes}"
                    required="true"
                >
                    <core:Item
                        key="{options>key}"
                        text="{options>text}"
                    />
                </ComboBox>
                <Label text="{i18n>company}" />
                <Input
                    id="createCompanyInput"
                    value="{createUserModel>/company}"
                    placeholder="{i18n>enterCompanyPlaceholder}"
                />
                <Label text="{i18n>countryPlaceholder}" />
                <Input
                    id="createCountryInput"
                    value="{createUserModel>/country}"
                    valueHelpRequest=".onCountryValueHelp"
                    showValueHelp="true"
                    placeholder="{i18n>selectCountryPlaceholder}"
                />
                <Label text="{i18n>city}" />
                <Input
                    id="createCityInput"
                    value="{createUserModel>/city}"
                    placeholder="{i18n>enterCityPlaceholder}"
                />

                <Label text="{i18n>validFrom}" />
                <DatePicker
                    id="createValidFromInput"
                    value="{createUserModel>/validFrom}"
                    valueFormat="yyyy-MM-dd"
                    displayFormat="short"
                />
                <Label text="{i18n>validTo}" />
                <DatePicker
                    id="createValidToInput"
                    value="{createUserModel>/validTo}"
                    valueFormat="yyyy-MM-dd"
                    displayFormat="short"
                />
            </form:content>
        </form:SimpleForm>
        <beginButton>
            <Button
                id="createUserSaveBtn"
                text="{i18n>createButton}"
                type="Emphasized"
                press=".onCreateUserSave"
            />
        </beginButton>
        <endButton>
            <Button
                id="createUserCancelBtn"
                text="{i18n>cancel}"
                press=".onCreateUserCancel"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
