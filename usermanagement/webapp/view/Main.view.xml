<mvc:View
    controllerName="com.customer.usermanagement.usermanagement.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:w="sap.ui.integration.widgets">

    <Page id="mainPage" showHeader="false" enableScrolling="true">
        <content>
            <VBox class="sapUiLargeMarginTop sapUiContentPadding">
                <!-- Welcome Section -->
                <VBox id="welcomeSection" class="sapUiSmallMarginBottom">
                    <Title text="Welcome" level="H2"/>
                    <Text text="Manage your users and groups efficiently"/>
                </VBox>

                <!-- Stats Cards -->
                <f:GridContainer id="gridContainer" class="sapUiSmallMargin">
                    <f:layout>
                        <f:GridContainerSettings
                            rowSize="5rem" 
                            columnSize="5rem" 
                            gap="1rem"/>
                    </f:layout>

                    <!-- Users Card -->
                    <w:Card 
                        id="userCard"
                        manifest="model/cards/usersCard.json"
                        action=".onCardAction">
                        <w:layoutData>
                            <f:GridContainerItemLayoutData 
                                rows="8" 
                                columns="4"/>
                        </w:layoutData>
                    </w:Card>

                    <!-- Groups Card -->
                    <w:Card 
                        id="groupCard"
                        manifest="model/cards/groupsCard.json"
                        action=".onCardAction">
                        <w:layoutData>
                            <f:GridContainerItemLayoutData 
                                rows="8" 
                                columns="4"/>
                        </w:layoutData>
                    </w:Card>
                </f:GridContainer>
            </VBox>
        </content>
    </Page>
</mvc:View>