<mvc:View
    displayBlock="true"
    controllerName="com.customer.usermanagement.usermanagement.controller.Home"
    height="100%"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:w="sap.ui.integration.widgets"
>
    <VBox
        id="vb1"
        class="sapUiLargeMarginTop"
    >
        <f:GridContainer
            id="gridContainerHome"
            class="sapUiSmallMargin"
        >
            <f:layout>
                <f:GridContainerSettings
                    id="grd1"
                    rowSize="5rem"
                    columnSize="5rem"
                    gap="1rem"
                />
            </f:layout>
            <f:layoutS>
                <f:GridContainerSettings
                    id="grdset"
                    rowSize="5rem"
                    columnSize="5rem"
                    gap="0.5rem"
                />
            </f:layoutS>
            <!-- Users Card -->
            <w:Card
                id="userCardId"
                manifest="model/cards/usersCard.json"
                action=".onCardAction"
                manifestReady=".onUserCardReady"
            >
                <w:layoutData>
                    <f:GridContainerItemLayoutData
                        id="gridUserslay"
                        rows="10"
                        columns="4"
                    />
                </w:layoutData>
            </w:Card>
            <!-- Groups Card -->
            <w:Card
                id="groupCardId"
                manifest="model/cards/groupsCard.json"
                action=".onCardAction"
                manifestReady=".onGroupCardReady"
            >
                <w:layoutData>
                    <f:GridContainerItemLayoutData
                        id="gridGroupsLay"
                        rows="10"
                        columns="4"
                    />
                </w:layoutData>
            </w:Card>
        </f:GridContainer>
    </VBox>
</mvc:View>
