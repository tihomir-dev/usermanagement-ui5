<mvc:View 
	displayBlock="true" 
	controllerName="com.customer.usermanagement.usermanagement.controller.Groups" 
	height="100%"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">

	<Table
		id="groupsTable"
		mode="SingleSelectMaster"
		itemPress=".onListItemPress"
		inset="false"
		items="{groupsModel>/groups}"
		width="auto">
		
		<headerToolbar>
			<OverflowToolbar id="groupsToolbar">
				<ToolbarSpacer/>
				<SearchField 
					id="groupSearchField" 
					search=".onSearch" 
					width="17.5rem"
					placeholder="Search groups..."/>
				<OverflowToolbarButton 
					id="createGroupBtn"
					icon="sap-icon://add" 
					type="Transparent" 
					press=".onCreate"
					tooltip="Create new group"/>
			</OverflowToolbar>
		</headerToolbar>
		
		<columns>
			<Column id="cole1"><Text text="{i18n>groupNameCol}" /></Column>
			<Column id="colw2"><Text text="{i18n>groupDescriptionCol}" /></Column>
			<Column id="col3e"><Text text="{i18n>groupMembersCol}" /></Column>
		</columns>
		
		<items>
			<ColumnListItem id="groupListItem" type="Navigation">
				<cells>
					<Text text="{groupsModel>name}"/>
					<Text text="{groupsModel>description}"/>
					<Text text="{groupsModel>memberCount}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>

</mvc:View>