<mvc:View
    displayBlock="true"
    controllerName="com.customer.usermanagement.usermanagement.controller.Groups"
    height="100%"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
>
    <Table
        id="groupsTable"
        mode="SingleSelectMaster"
        itemPress=".onListItemPress"
        inset="false"
        items="{groupsModel>/groups}"
        width="auto"
    >
        <headerToolbar>
            <OverflowToolbar id="groupsToolbar">
                <ToolbarSpacer />
                <SearchField
                    id="groupSearchField"
                    search=".onSearch"
                    width="17.5rem"
                    liveChange="onSearchLiveChange"
                    placeholder="{i18n>searchGroupsPlaceholder}"
                />
                <OverflowToolbarButton
                    id="createGroupBtn"
                    icon="sap-icon://add"
                    type="Transparent"
                    press=".onCreate"
                    tooltip="{i18n>createNewGroupTooltip}"
                />
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column id="cole1">
                <Text text="{i18n>scimId}" />
            </Column>
            <Column id="colw2">
                <Text text="{i18n>groupDisplayName}" />
            </Column>
            <Column id="col3e">
                <Text text="{i18n>groupDescriptionCol}" />
            </Column>
        </columns>
        <items>
            <ColumnListItem
                id="groupListItem"
                type="Navigation"
            >
                <cells>
                    <Text text="{groupsModel>ID}" />
                    <Text text="{groupsModel>DISPLAY_NAME}" />
                    <Text text="{groupsModel>DESCRIPTION}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>
